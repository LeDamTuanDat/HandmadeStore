<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".OrderDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_edittext"
        android:padding="10dp">
        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID : -NNArkjTrZvztGUy_lIv"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên : Lê Đàm Tuấn Đạt"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SĐT : 0345320943"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ : 58-Yên Nghĩa"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái : Chờ xác nhận"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/custom_edittext"
        android:padding="10dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết đơn hàng"
                android:textSize="25dp" />
            <View
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/order_detail_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng thanh toán : 100000đ"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="8dp"
        android:background="@drawable/custom_edittext">
        <Spinner
            android:id="@+id/spinner"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="@color/green"
            android:outlineSpotShadowColor="@color/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu"
            app:icon="@drawable/baseline_check_circle_outline_24"
            android:layout_gravity="center"
            app:cornerRadius="10dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/green"
            android:layout_marginRight="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thoát"
            android:textAllCaps="false"
            app:icon="@drawable/x_circle"
            android:layout_gravity="center"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/green"/>
    </LinearLayout>

</LinearLayout>